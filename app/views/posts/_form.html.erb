<%= form_for @post do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<%= f.label :content %><br>
<%= f.text_area :content, size: '60x10' %><br>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
<br>
<%= f.collection_select :destination_id, Destination.all, :id, :name %>
<br>
<%= f.submit %>
<% end %>

<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<%= error %>
    <% end %>
<% end %>